<AddingTransactionScreen>:
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "add"
            id: toolbar
            pos_hint: {"top": 1}
        
            elevation: 10
            right_action_items: [['close-circle-outline', lambda x: root.abort_transaction()], ['content-save', lambda x: root.save_transaction()]]
        
        
        FloatLayout:
            BoxLayout:
                orientation: "vertical"
                Label:
                    id: date_and_time
                    text:""
                    font_size: 30
                Label:
                    id: welcome_label
                    text: "Welcome to Transaction!"
                    font_size: 40
                    color: 1,0,1,1
                Button:
                    text: "Press me for fun"
                    color: 1, 1, 0, 1
                    color_before: 1,0,0,1
                    background_down: "grey_color.png"
                    on_release: root.change_color()


        




